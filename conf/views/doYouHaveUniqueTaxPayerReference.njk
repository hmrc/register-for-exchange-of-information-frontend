{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("doYouHaveUniqueTaxPayerReference.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back"),
    classes: "js-enabled"
  }) }}
{% endblock %}

{% block mainContent %}

  <div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ action }}" method="post">

          {{ csrf() | safe }}

         <h1 class="govuk-heading-l">
          {{ messages("doYouHaveUniqueTaxPayerReference.title") }}
         </h1>

         <p class="govuk-body">
           {{ messages("doYouHaveUniqueTaxPayerReference.p1") }}
         </p>

          {{ govukRadios({
            classes: "govuk-radios__inline",
            name: 'value',
            fieldset: {
              legend: {
                isPageHeading: false,
                classes: "govuk-fieldset__legend--l text-overflow govuk-visually-hidden"
              }
            },
            hint: {
              html: hintText
            },
            items: radios,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {
              "id": "submit"
            }
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
