{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("utr.title", taxType), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ action }}" method="post">

          {{ csrf() | safe }}

        <h1 class="govuk-heading-l text-overflow" id="heading">
            {{ messages("utr.heading", taxType) }}
        </h1>

        <div>
            <p class="govuk-hint text-overflow" id="hint-text">{{ messages("utr.hint", taxType) }}
            <a href="{{lostUTRUrl}}" class="govuk-link text-overflow" rel="noreferrer noopener" target="_blank">{{messages("utr.hint.link")}}</a></p>
        </div>

            {{ govukInput({
                id: "value",
                name: "value",
                value: form.value.value,
                errorMessage: form.value.error,
                attributes: {
                    "aria-labelledby" : "heading",
                    "aria-describedby": "hint-text"
                }
            }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {
              "id": "submit"
            }
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
