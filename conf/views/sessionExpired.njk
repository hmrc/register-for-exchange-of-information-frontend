{% extends "includes/signedout-layout.njk" %}

{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("sessionExpired.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("sessionExpired.heading") }}
        </h1>

        <p class="govuk-body">
          {{ messages("sessionExpired.guidance") }}
        </p>

        <p>
          <a id="startUrl" class="govuk-link" href="{{startUrl}}">
            {{ messages("site.homePageLink.text") }}
          </a>
        </p>

      </div>
    </div>
  </div>

{% endblock %}
