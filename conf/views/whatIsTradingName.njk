{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whatIsTradingName.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
   <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ action }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            label: {
              text: messages('whatIsTradingName.heading'),
              isPageHeading: true,
              classes: "govuk-label--l"
            },
            id: "businessName",
            classes: "govuk-input govuk-!-width-three-quarters",
            name: "businessName",
            value: form.businessName.value,
            errorMessage: form.businessName.error
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {
              "id": "submit"
            }
          }) }}

        </form>

      </div>
   </div>
{% endblock %}
