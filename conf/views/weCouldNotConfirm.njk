{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("weCouldNotConfirm.title", affinity)) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
          {{ messages("weCouldNotConfirm.heading", affinity) }}
        </h1>

        <p class="govuk-body">
          {{ messages("weCouldNotConfirm.guidance", messages("weCouldNotConfirm.option")) }}
        </p>

        <div class="govuk-!-padding-top-4">
          {{ govukButton({
            text: messages("weCouldNotConfirm.button"),
            href: action,
            attributes: {id:"submit"}
          }) }}
        </div>

      </div>
    </div>

{% endblock %}
