{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whatIsYourPostcode.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ action }}" method="post">

        {{ csrf() | safe }}

        {{ govukInput({
          label: {
            text: messages('whatIsYourPostcode.title'),
            isPageHeading: true,
            classes: "govuk-label--l"
          },
          classes: "govuk-input--width-10",
          id: "postCode",
          name: "postCode",
          value: form.postCode.value,
          autocomplete: "postal-code",
          errorMessage: form.postCode.error
        }) }}

        <p class="govuk-body">
            <a id="manualAddressLink" class="govuk-link" href={{ manualAddressURL | safe }}>
                {{ messages("whatIsYourPostcode.manualLink") }}
            </a>
        </p>

          {{ govukButton({
            text: messages("whatIsYourPostcode.button"),
            attributes: {
              "id": "submit"
            }
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
