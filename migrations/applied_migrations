#!/bin/bash

echo ""
echo "Applying migration AddressWithoutId"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /addressWithoutId                        controllers.AddressWithoutIdController.onPageLoad(mode: models.Mode = models.NormalMode)" >> ../conf/app.routes
echo "POST       /addressWithoutId                        controllers.AddressWithoutIdController.onSubmit(mode: models.Mode = models.NormalMode)" >> ../conf/app.routes

echo "GET        /changeAddressWithoutId                  controllers.AddressWithoutIdController.onPageLoad(mode: models.Mode = models.CheckMode)" >> ../conf/app.routes
echo "POST       /changeAddressWithoutId                  controllers.AddressWithoutIdController.onSubmit(mode: models.Mode = models.CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "addressWithoutId.title = addressWithoutId" >> ../conf/messages.en
echo "addressWithoutId.heading = addressWithoutId" >> ../conf/messages.en
echo "addressWithoutId.addressLine1 = addressLine1" >> ../conf/messages.en
echo "addressWithoutId.addressLine2 = addressLine2" >> ../conf/messages.en
echo "addressWithoutId.checkYourAnswersLabel = addressWithoutId" >> ../conf/messages.en
echo "addressWithoutId.error.addressLine1.required = Enter addressLine1" >> ../conf/messages.en
echo "addressWithoutId.error.addressLine2.required = Enter addressLine2" >> ../conf/messages.en
echo "addressWithoutId.error.addressLine1.length = addressLine1 must be 100 characters or less" >> ../conf/messages.en
echo "addressWithoutId.error.addressLine2.length = addressLine2 must be 100 characters or less" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryAddressWithoutIdUserAnswersEntry: Arbitrary[(pages.AddressWithoutIdPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[pages.AddressWithoutIdPage.type]";\
    print "        value <- arbitrary[models.AddressWithoutId].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryAddressWithoutIdPage: Arbitrary[pages.AddressWithoutIdPage.type] =";\
    print "    Arbitrary(pages.AddressWithoutIdPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to ModelGenerators"
awk '/trait ModelGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryAddressWithoutId: Arbitrary[models.AddressWithoutId] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        addressLine1 <- arbitrary[String]";\
    print "        addressLine2 <- arbitrary[String]";\
    print "      } yield models.AddressWithoutId(addressLine1, addressLine2)";\
    print "    }";\
    next }1' ../test/generators/ModelGenerators.scala > tmp && mv tmp ../test/generators/ModelGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(AddressWithoutIdPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/extends RowBuilder/ {\
     print;\
     print "";\
     print "  def addressWithoutId: Option[Row] = userAnswers.get(pages.AddressWithoutIdPage) map {";\
     print "      answer =>";\
     print "        toRow(";\
     print "          msgKey = \"addressWithoutId\",";\
     print "          value = msg\"site.edit\",";\
     print "          href = routes.AddressWithoutIdController.onPageLoad(CheckMode).url,";\
     print "        )";\
     print "    }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving tests"
mv ../generated-test/controllers/AddressWithoutIdControllerSpec.scala ../test/controllers/
mv ../generated-test/forms/AddressWithoutIdFormProviderSpec.scala ../test/forms/
mv ../generated-test/pages/AddressWithoutIdPageSpec.scala ../test/pages/

echo "Migration AddressWithoutId completed"
